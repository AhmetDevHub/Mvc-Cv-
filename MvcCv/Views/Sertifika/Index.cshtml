@using MvcCv.Models.Entity
@model List<TblSertifikalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<!DOCTYPE html>
<html>
@{int i = 0; }
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

              
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div>
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                   
                                    <div class="timeline timeline-inverse">
                                        @foreach (var x in Model)
                                        {
                                            var renk = (i % 2 == 0) ? "success" : "primary";
                                            i++;
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn btn-@renk">
                                                    <span class="bg-@renk">
                                                        @x.Tarih
                                                    </span>
                                                </a>
                                                
                                            </div>

                                            <div>
                                                <i  class="fas fa-trophy text-warning" @*class="fas fa-comment bg-primary"*@></i>
                                                <div class="timeline-item">


                                                    <div  class="timeline-body">
                                                       @x.Aciklama
                                                    </div>
                                                    <div class="timeline-footer">
                                                        @*<a href="#" class="btn btn-primary btn-sm">Düzenle</a>*@
                                                        <a href="/Sertifika/SertifikaSil/@x.ID" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                     <a href="/Sertifika/YeniSertifika/" class="btn btn-outline-info">Yeni Sertifika Girişi</a>
                                       
                                    </div>
                                </div>
                           
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>